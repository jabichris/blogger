<h1>Available  Tags</h1>

<ul id = "tags">
<% @tags.each do |tag| %>
  <li>
    <%= link_to tag.name, tag_path(tag), class: 'tag_name', id: "tag_#{tag.id}" %>
    <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"} %>
  </li>
<% end %>
</ul>
